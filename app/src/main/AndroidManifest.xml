<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dragon.wallpaperapp">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WallpaperApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/WallpaperApp">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/wallpaperApp"
            android:theme="@style/WallpaperApp">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ui.activity.WallpaperDisplayActivity" />
        <activity
            android:name=".ui.activity.CategoryActivity"
            android:label="@string/title_activity_category" />

    </application>

</manifest>